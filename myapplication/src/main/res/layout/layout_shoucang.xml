<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/shoucang_swipelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="130dp">
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/shoucang_ce_shanchu"
                android:gravity="center"
                android:background="#FC0000"
                android:textColor="#fff"
                android:text="删除"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/shoucang_shanchu"
                    android:src="@mipmap/shanchu"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                </ImageView>

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/beijings"
                    android:id="@+id/shoucang_image"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/shoucang_shanchu"
                    android:layout_width="90dp"
                    android:layout_height="100dp">
                </ImageView>

                <TextView





                    android:textColor="#000000"
                    android:text="几乎能创下好多东西"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/shoucang_image"
                    android:id="@+id/shoucang_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



                <TextView
                    android:layout_centerVertical="true"
                    android:textColor="#525252"
                    android:text="＞"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:id="@+id/shoucang_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <ImageView
                    android:id="@+id/shoucang_zhaoxiangsi"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/shoucang_jian"
                    android:src="@mipmap/zhaoxiangsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


                <TextView
                    android:id="@+id/shoucang_price"
                    android:layout_marginTop="80dp"
                    android:textColor="#C90000"
                    android:text="yanse"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/shoucang_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </RelativeLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>





</RelativeLayout>
