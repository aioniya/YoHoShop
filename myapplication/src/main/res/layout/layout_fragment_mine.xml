<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <RelativeLayout

        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <androidx.core.widget.NestedScrollView

            android:id="@+id/mine_nestedscrollview"

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout

                        android:background="@mipmap/beijingw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/topss"
                            android:background="#00FFFFFF"
                            android:layout_marginTop="80dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/kuangkuang"
                            android:background="@drawable/whiteback"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_below="@+id/topss"
                            android:layout_width="match_parent"
                            android:layout_height="170dp">



                            <TextView
                                android:id="@+id/mine_name"
                                android:textColor="#000000"
                                android:layout_marginBottom="10dp"
                                android:text="C765561651S5D1SA5D1"
                                android:layout_centerHorizontal="true"
                                android:layout_above="@+id/chaoliujiushiwodetaidu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:id="@+id/chaoliujiushiwodetaidu"
                                android:textColor="#000000"
                                android:layout_centerInParent="true"
                                android:text="潮流就是我的态度"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            </TextView>


                            <RelativeLayout
                                android:layout_marginTop="15dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/chaoliujiushiwodetaidu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:textSize="9sp"
                                    android:id="@+id/mine_tv_putong"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="普通"
                                    android:background="@drawable/mine_tv_putong"
                                    android:paddingLeft="7dp"
                                    android:paddingRight="7dp"
                                    android:paddingTop="1.5dp"
                                    android:paddingBottom="1.5dp"
                                    ></TextView>
                                <TextView
                                    android:textColor="#B0B0B0"
                                    android:layout_marginTop="1dp"
                                    android:textSize="10sp"
                                    android:id="@+id/mine_tv_growth_value"
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="成长值0"
                                    android:layout_toRightOf="@id/mine_tv_putong"
                                    ></TextView>


                            </RelativeLayout>


                        </RelativeLayout>
                        <ImageView
                            android:id="@+id/mine_touxiang"
                            android:layout_marginTop="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                        </ImageView>

                        <RelativeLayout
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/linearback"
                            android:layout_marginTop="265dp"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_margin="1dp"
                                android:background="#fff"
                                android:layout_width="match_parent"
                                android:layout_height="30dp">
                                <com.google.android.material.tabs.TabLayout
                                    app:tabIndicatorHeight="0dp"
                                    android:id="@+id/mine_tablayout"
                                    style="@style/zhangjiqunStyle"

                                    app:tabTextColor="#000000"
                                    app:tabSelectedTextColor="#fff"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                </com.google.android.material.tabs.TabLayout>




                            </RelativeLayout>


                        </RelativeLayout>


                    </RelativeLayout>






                </RelativeLayout>

                <com.example.myapplication.ui.HomeHeadViewPager
                    android:background="#fff"
                    android:id="@+id/mine_viewpager"
                    android:layout_marginTop="50dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.example.myapplication.ui.HomeHeadViewPager>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



        <RelativeLayout
            android:background="#C4242424"
            android:id="@+id/tops"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </RelativeLayout>
        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/mine_shezhi"
                android:src="@mipmap/shezhig"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>




            <ImageView
                android:id="@+id/mine_erweima"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/mine_xiaoxi"
                android:src="@mipmap/erweimag"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:id="@+id/mine_xiaoxi"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/mine_fenxiang"
                android:src="@mipmap/xiaoxig"

                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>
            <ImageView
                android:id="@+id/mine_fenxiang"
                android:src="@mipmap/fenxiangg"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fabu"
            android:layout_alignParentRight="true"
            android:background="@drawable/fabu"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_width="70dp"
            android:layout_height="30dp">

            <TextView

               android:layout_centerInParent="true"
                android:textColor="#fff"
                android:text="发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>



    </RelativeLayout>



</LinearLayout>
