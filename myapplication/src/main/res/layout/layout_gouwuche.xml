<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/tops"
        android:background="#00FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    </RelativeLayout>



    <RelativeLayout
        android:background="#fff"
        android:layout_below="@+id/tops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="10dp"
            android:src="@mipmap/zhuce_chazi"
            android:id="@+id/goods_guanbi"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

        <TextView

            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#E91E63"
            android:text="￥258.00"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/chima"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:text="选中尺码: XL"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#919191"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp">

        </LinearLayout>
        <LinearLayout

            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:text="颜色"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <Button
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:background="@drawable/colorbuttonback"
                    android:text="黑色"
                    android:layout_marginLeft="70dp"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="35dp">

                </Button>


            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="#919191"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                tools:ignore="Suspicious0dp">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:text="尺码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <RadioGroup
                    android:id="@+id/group"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <RadioButton


                        android:id="@+id/gouwuche_radioone"
                        android:textColor="@drawable/textcolorselect"
                        android:checked="true"
                        android:textAlignment="center"
                        android:text="L"
                        android:button="@null"
                        android:background="@drawable/selectbutton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                    </RadioButton>

                    <RadioButton
                        android:textColor="@drawable/textcolorselect"
                        android:id="@+id/gouwuche_radiotwo"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:text="XL"
                        android:button="@null"
                        android:background="@drawable/selectbutton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                    </RadioButton>

                    <RadioButton
                        android:textColor="@drawable/textcolorselect"
                        android:id="@+id/gouwuche_radiothree"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center"
                        android:text="XXL"
                        android:button="@null"
                        android:background="@drawable/selectbutton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                    </RadioButton>


                </RadioGroup>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="#919191"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                tools:ignore="Suspicious0dp">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:text="数量"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView

                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:text="1"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9">

                <Button
                    android:id="@+id/gouwuche_button"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:background="@drawable/goodsbutton"
                    android:text="加入购物车"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/gouwuche_image"
        android:layout_marginLeft="15dp"
        android:src="@color/colorAccent"
        android:layout_width="120dp"
        android:layout_height="140dp">
    </ImageView>
</RelativeLayout>
